<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- Definition of a log pattern with the traceId -->
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - [traceId:%X{traceId}] %msg%n"/>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Overall level of the logs -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Specific logs for your project -->
    <logger name="com.carpooling" level="DEBUG"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="org.flywaydb" level="WARN"/>

</configuration>
